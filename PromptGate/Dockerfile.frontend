# Rebuff는 Next.js 기반 (Node.js)
FROM node:18

WORKDIR /app

# 프론트엔드 소스 코드 복사
COPY frontend/package*.json ./
RUN npm install

COPY frontend/ .

# Supabase 환경변수 설정
ENV NEXT_PUBLIC_SUPABASE_URL=https://dummy.supabase.co
ENV NEXT_PUBLIC_SUPABASE_ANON_KEY=dummy_anon_key

RUN npm run build

EXPOSE 3000
CMD ["npm", "run", "start"]
